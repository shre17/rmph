<div class="container">
  <% if user_signed_in? %>
    <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-info"%>
    <%= link_to "Change Password",edit_change_password_path(current_user), class: "btn btn-success"%>
    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-secondary float-right"%>
    <% else %>
    <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary"%>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-info"%>
  <% end %>
</div>