<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-12">
      <h3 class="text-center register-text">(SECURED LOGIN)</h3>
      <div class="card cont-shadow">
        <div class="card-header new-card-header">
          <div class="row">
            <div class="col-md-2 col-3">
              <i class="fa fa-unlock-alt header-icon"></i>
            </div>
            <div class="col-md-10 col-9 card-head">
              <h3 class="card-title mb-0 mt-2">Login</h3>
              <small class="font-weight-bold">Please enter your credentials to login.</small>
            </div>
          </div>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :mobile_number %><br />
              <%= f.text_field :mobile_number, class: "form-control", placeholder: "Your Mobile Number" %>
              <small class="text-muted">Your unique username to app</small>
            </div>

            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, class: "form-control", placeholder: "********" %>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "forgot password", new_password_path(resource_name), class: "forgot-pwd" %>
              <% end -%>
            </div>

            <div class="row">
              <div class="actions col-md-6">
                <%= f.submit "Login", class: "btn btn-success text-white" %>
                <%= link_to "Register", new_user_registration_path, class: "btn btn-warning text-white" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
